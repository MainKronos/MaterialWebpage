@use 'var';


input{
	&::-webkit-outer-spin-button, &::-webkit-inner-spin-button{
		appearance: none;
		margin: 0;
	}

	&[type=number], &[type=text]{
		color: rgba(255,255,255,0.7);
		background: none;
		font-size: 18px;
		padding: 10px;
		width: calc(100% - 44px);
		border: 2px solid rgba(255,255,255,0.2);
		border-radius: 4px;
		transition: border 0.3s;
		display: block;
		margin: 10px;
		appearance: textfield;

		&:disabled{
			border: 2px solid rgba(0,0,0,0.2);
		}

		&::placeholder{
			color: rgba(255,255,255,0.2);
		}

		&:focus{
			outline: none;
			border: 2px solid var.$primary-color;
		}

		~ label {
			padding: 0 10px;
			color: rgba(255,255,255,0.7);
			font-size: 14px;
			font-weight: normal;
			position: absolute;
			top: 17px;
			left: 35px;
			background-color: var.$background-color;
			margin: 0 0 55px;
			user-select: none;
		}
	}

	&[type=range]{
		vertical-align: middle;
		appearance: none;
		width: calc( 100% - 40px);
		height: 5px;
		border-radius: 5px;
		background: rgba(255,255,255,0.2);
		outline: none;

		&::-webkit-slider-thumb{
			appearance: none;
			width: 20px;
			height: 20px;
			border-radius: 50%;
			background: var.$primary-color;
			cursor: pointer;
			outline: 2px solid var.$background-color;
		}

		&::-moz-range-thumb{
			width: 20px;
			height: 20px;
			border-radius: 50%;
			background: var.$primary-color;
			cursor: pointer;
			outline: 2px solid var.$background-color;
		}
	}

	&[type=file]{
		opacity: 0;
		width: 0;
		height: 0;
		visibility: hidden;
	}
}

label{
	&.checkbox{
		position: relative;
		padding: 0 20px;
		font-size: 18px;
		user-select: none;
		cursor: pointer;
		margin: 10px;
		color: rgba(255,255,255,0.7);

		> input[type=checkbox]{
			opacity: 0;

			+ span{
				position: absolute; 
				top: 0;
				left: 0; 
				height: 18px;
				width: 18px;
				background-color: transparent;
				border: 2px solid rgba(255,255,255,0.2);
				border-radius: 4px;

				&::after{
					font-family: "Material Icons";
					content: "";
					color: white;
				}
			}

			&:checked + span{
				background-color: var.$primary-color;

				&::after{
					content: "\e5ca";
				}
			}
		}
	}

	&.radio{
		position: relative;
		padding: 1px 20px;
		font-size: 15px;
		user-select: none;
		cursor: pointer;
		margin: 7px;
		display: block;

		> input[type=radio]{
			opacity: 0;

			+ span{
				position: absolute; 
				top: 0;
				left: 0; 
				height: 15px;
				width: 15px;
				background-color: transparent;
				border: 2px solid rgba(255,255,255,0.2);
				border-radius: 50%;

				&:before{
					content: " ";
					background-color: transparent;
					margin: 1px;
					border: 2.5px solid var.$background-color;
					height: 8px;
					width: 8px;
					border-radius: 50%;
					display: block;
				}
			}

			&:checked + span {
				background-color: var.$primary-color;
			}
		}
	}

	&.switch{
		cursor: pointer;
		user-select: none;

		> input[type=checkbox] {
			opacity: 0;
			width: 0;
			height: 0;
			position: absolute;
			pointer-events: none;

			+ span{
				content: "";
				display: inline-block;
				position: relative;
				width: 36px;
				height: 14px;
				background-color: rgba(255,255,255,0.2);
				border-radius: 15px;
				margin-right: 10px;
				transition: background 0.3s ease, box-shadow 0.3s ease;
				vertical-align: middle;
				margin: 0 16px;

				&:before {
					content: "";
					position: absolute;
					display: inline-block;
					width: 20px;
					height: 20px;
					border-radius: 50%;
					left: 0;
					top: -3px;
					box-shadow: none;
					transition: left 0.3s ease, background .3s ease, transform .1s ease;
					background-color: var.$primary-color;
					outline: 2px solid var.$background-color;
				}
			}
			
			&:checked + span{
				background-color: var.$primary-color;
				box-shadow: inset 0 0 20px -5px var.$background-color;
				&:before{
					left: 18px;	
				}
			}
		}
	}
}